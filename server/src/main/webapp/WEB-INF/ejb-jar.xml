<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
         version="3.1">
    <assembly-descriptor>
        <application-exception>
            <exception-class>javax.validation.ConstraintViolationException</exception-class>
        </application-exception>
        <application-exception>
            <exception-class>javax.persistence.OptimisticLockException</exception-class>
        </application-exception>
        <application-exception>
            <exception-class>org.hibernate.exception.ConstraintViolationException</exception-class>
        </application-exception>
        <application-exception>
            <exception-class>javax.persistence.PersistenceException</exception-class>
        </application-exception>
        <application-exception>
            <exception-class>com.google.gson.JsonParseException</exception-class>
        </application-exception>
        <application-exception>
            <exception-class>com.google.gson.JsonSyntaxException</exception-class>
        </application-exception>
    </assembly-descriptor>
</ejb-jar>